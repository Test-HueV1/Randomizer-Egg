-- Simple GUI Menu Example
-- Put this in StarterGui > LocalScript in Roblox Studio

local ScreenGui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")

-- Properties
ScreenGui.Name = "CustomMenu"
ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

Frame.Parent = ScreenGui
Frame.BackgroundColor3 = Color3.fromRGB(150, 0, 0)
Frame.Position = UDim2.new(0.05, 0, 0.2, 0)
Frame.Size = UDim2.new(0, 200, 0, 300)

-- Function to create buttons
local function createButton(name, text, order, callback)
	local btn = Instance.new("TextButton")
	btn.Name = name
	btn.Parent = Frame
	btn.BackgroundColor3 = Color3.fromRGB(200, 0, 0)
	btn.Size = UDim2.new(1, -10, 0, 40)
	btn.Position = UDim2.new(0, 5, 0, 5 + (order * 45))
	btn.TextColor3 = Color3.fromRGB(255, 255, 255)
	btn.Font = Enum.Font.SourceSansBold
	btn.TextSize = 18
	btn.Text = text

	btn.MouseButton1Click:Connect(callback)
	return btn
end

-- Example ESP toggle
local espOn = false
createButton("ESP", "ESP: OFF", 0, function(btn)
	espOn = not espOn
	btn.Text = "ESP: " .. (espOn and "ON ✅" or "OFF ❌")
	print("ESP Toggled:", espOn)
end)

-- Randomize Egg
createButton("RandomEgg", "Randomize Egg", 1, function()
	print("Egg randomized!") -- Replace with real function
end)

-- Auto Age
createButton("AutoAge", "Auto Age (hold pet)", 2, function()
	print("Auto Age triggered!") -- Replace with real function
end)

-- Mutation Reroll
createButton("MutReroll", "Mutation Reroll", 3, function()
	print("Mutation reroll clicked!") -- Replace with real function
end)

-- Toggle Mutation
createButton("ToggleMut", "Toggle Mutation", 4, function()
	print("Mutation toggled!") -- Replace with real function
end)
